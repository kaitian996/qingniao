{
    "compilerOptions": {
        "baseUrl": ".",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es2016",
        "module": "esnext",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "downlevelIteration": true,
        "lib": ["esnext", "DOM"],
        "declaration": true,
        "outDir": "./dist",
        "declarationDir": "./dist/types",
        "experimentalDecorators": true
    },
    "exclude": ["play","node_modules", "dist"],
    "include":["src"]
}
